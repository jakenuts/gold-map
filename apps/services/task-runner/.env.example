# Server Configuration
PORT=3001
HOST=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=goldmap
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Logging Configuration
LOG_LEVEL=info # One of: fatal, error, warn, info, debug, trace

# Queue Configuration
QUEUE_PREFIX=gold-map
QUEUE_KEEP_COMPLETED=100
QUEUE_KEEP_FAILED=1000
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=1000

# Data Collection Configuration
MAX_CONCURRENT_JOBS=3
REQUEST_TIMEOUT=30000
RATE_LIMIT_PER_SECOND=2

# Geographic Bounds (Optional - Default to Northern California)
DEFAULT_MIN_LON=-124.4071825
DEFAULT_MAX_LON=-122.3933314
DEFAULT_MIN_LAT=40.0711794
DEFAULT_MAX_LAT=41.7410164
